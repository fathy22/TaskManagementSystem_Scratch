@model TaskManagementSystem.Web.Models.RoleViewModel
@{
    ViewData["Title"] = "Create Role";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create Role</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label>Permissions</label>
        <select asp-for="SelectedPermissions" class="form-control" multiple>
            @foreach (var permission in Model.Permissions)
            {
                <option value="@permission.Value">@permission.Value</option>
            }
        </select>
        <span asp-validation-for="SelectedPermissions" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}