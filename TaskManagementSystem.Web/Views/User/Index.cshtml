@model UserListViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Users</h2>

<table class="table">
    <thead>
        <tr>
            <th>Full Name</th>
            <th>Email</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model.Users)
        {
            <tr>
                <td>@user.FirstName @user.SecondName</td>
                <td>@user.Email</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = user.Id })">Edit</a> |
                    @if (user.Id != Model.CurrentUserId && user.Id != Model.AdminUserId)
                    {
                        <a href="@Url.Action("Delete", new { id = user.Id })">Delete</a>
                    }
                    else
                    {
                        <span>Delete</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-primary">Create New User</a>
