
@model IEnumerable<TaskManagementSystem.Teams.Dto.TeamDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Teams</h2>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Team Leader Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var team in Model)
        {
            <tr>
                <td>@team.Name</td>
                <td>@team.TeamLeaderName</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = team.Id })">Edit</a> |
                    <a href="@Url.Action("Delete", new { id = team.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-primary">Create New Team</a>
