
@model IEnumerable<TaskManagementSystem.TaskSheets.Dto.TaskSheetDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Tasks</h2>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var task in Model)
        {
            <tr>
                <td>@task.Title</td>
                <td>@task.Description</td>
                <td>
                    <a href="@Url.Action("Edit", new { id = task.Id })">Edit</a> |
                    <a href="@Url.Action("AddComment", new { id = task.Id })">Add Comment</a> |
                    <a href="@Url.Action("Delete", new { id = task.Id })">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a href="@Url.Action("Create")" class="btn btn-primary">Create New Task</a>
