@model TaskManagementSystem.Teams.Dto.TeamDto
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
        var teamLeaders = ViewBag.TeamLeaders as IEnumerable<TaskManagementSystem.Core.Entities.ApplicationUser>;
        var regularUsers = ViewBag.RegularUsers as IEnumerable<TaskManagementSystem.Core.Entities.ApplicationUser>;
}

<h2>Edit User</h2>

<form asp-action="Edit" method="post">
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>TeamLeader</label>
            <select asp-for="TeamLeaderId" class="form-control">
                @foreach (var lead in teamLeaders)
                {
                    <option value="@lead.Id">@lead.FirstName @lead.SecondName</option>
                }
            </select>
            <span asp-validation-for="TeamLeaderId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label>Team Memebers</label>
            <select asp-for="TeamMembers" class="form-control" multiple>
                @foreach (var member in regularUsers)
                {
                    <option value="@member.Id">@member.FirstName @member.SecondName</option>
                }
            </select>
            <span asp-validation-for="TeamMembers" class="text-danger"></span>
        </div>
    <button type="submit" class="btn btn-primary">Edit</button>
</form>